{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "${file}",
                "${fileDirname}/PolygonUtils/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-I",
                "${fileDirname}",
                "-I",
                "/usr/local/include",
                "-I",
                "/usr/include",
                "-I",
                "/usr/include/opencv2",
                "-L",
                "/usr/lib/x86_64-linux-gnu",
                "-l",
                "opencv_core",
                "-l",
                "opencv_highgui",
                "-l",
                "opencv_imgproc",
                "-l",
                "opencv_imgcodecs",
                "-l",
                "opencv_shape",
                "-l",
                "opencv_videoio",
                "-l",
                "opencv_xfeatures2d",
                "-l",
                "opencv_flann",
                "-l",
                "opencv_features2d",
                "-l",
                "boost_system",
                "-l",
                "boost_filesystem",
                "-fopenmp",
                "-pthread"
            ],
            "options": {
                "cwd": "/usr/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]
}